<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springbootaicode.mapper.ClazzMapper">

    <resultMap id="ClazzResultMap" type="Clazz">
        <id     column="id"          property="id"/>
        <result column="class_name"  property="className"/>
        <result column="grade"       property="grade"/>
        <result column="teacher"     property="teacher"/>
        <result column="description" property="description"/>
        <result column="created_at"  property="createdAt"/>
        <result column="updated_at"  property="updatedAt"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, class_name, grade, teacher, description, created_at, updated_at
    </sql>

    <sql id="Condition_Where_Clause">
        <where>
            <if test="className != null and className != ''">
                AND class_name LIKE CONCAT('%', #{className}, '%')
            </if>
            <if test="grade != null and grade != ''">
                AND grade = #{grade}
            </if>
        </where>
    </sql>

    <select id="findById" resultMap="ClazzResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM clazz
        WHERE id = #{id}
    </select>

    <select id="findByCondition" resultMap="ClazzResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM clazz
        <include refid="Condition_Where_Clause"/>
        ORDER BY created_at DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <select id="countByCondition" resultType="long">
        SELECT COUNT(*)
        FROM clazz
        <include refid="Condition_Where_Clause"/>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO clazz (class_name, grade, teacher, description, created_at, updated_at)
        VALUES (#{className}, #{grade}, #{teacher}, #{description}, NOW(), NOW())
    </insert>

    <update id="update">
        UPDATE clazz
        <set>
            <if test="className != null">class_name = #{className},</if>
            <if test="grade != null">grade = #{grade},</if>
            <if test="teacher != null">teacher = #{teacher},</if>
            <if test="description != null">description = #{description},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM clazz WHERE id = #{id}
    </delete>

</mapper>
